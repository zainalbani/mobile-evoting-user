<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_text_verif">


    <ImageView
        android:id="@+id/iv_verif"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/verif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_verif"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/text_verification"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        app:layout_constraintEnd_toEndOf="@+id/iv_verif"
        app:layout_constraintStart_toStartOf="@+id/iv_verif"
        app:layout_constraintTop_toBottomOf="@+id/iv_verif" />

    <com.zain.e_voting.utils.PrimaryButton
        android:id="@+id/btn_to_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Back To Home"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_verif"
        app:layout_constraintStart_toStartOf="@+id/tv_verif"
        app:layout_constraintTop_toBottomOf="@+id/tv_verif" />
</androidx.constraintlayout.widget.ConstraintLayout>

