<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="300dp"
                android:layout_height="260dp"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/white"
                android:layout_margin="10dp"
                android:drawableTop="@drawable/chopperemon"
                android:fontFamily="@font/poppins"
                android:text="Paslon 1"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="300dp"
                android:layout_height="260dp"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/white"
                android:drawableTop="@drawable/chopperemon"
                android:fontFamily="@font/poppins"
                android:layout_margin="10dp"
                android:text="Paslon 2"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="300dp"
                android:layout_height="260dp"
                android:background="@drawable/custom_radio_selector"
                android:button="@color/white"
                android:drawableTop="@drawable/chopperemon"
                android:fontFamily="@font/poppins"
                android:layout_margin="10dp"
                android:text="Paslon 3"
                android:textAlignment="center" />

        </RadioGroup>

        <com.zain.e_voting.utils.PrimaryButton
            android:id="@+id/primaryButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Submit"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup"
            app:layout_constraintStart_toStartOf="@+id/radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>